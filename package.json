{
  "name": "centro-diagnostico-backend",
  "version": "1.0.0",
  "description": "Backend API - Centro Diagn√≥stico Mi Esperanza",
  "main": "server.js",
  "bin": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "seed": "node utils/seed.js",
    "build:backend": "pkg . --targets node18-win-x64 --output frontend/src-tauri/bin/backend-x86_64-pc-windows-msvc.exe",
    "frontend:build": "cd frontend && npm run build",
    "tauri:dev": "cd frontend && npx tauri dev",
    "tauri:build": "cd frontend && npx tauri build"
  },
  "pkg": {
    "scripts": [
      "controllers/**/*.js",
      "models/**/*.js",
      "routes/**/*.js",
      "middleware/**/*.js",
      "services/**/*.js",
      "config/**/*.js",
      "utils/**/*.js"
    ],
    "assets": [
      ".env",
      ".env.example"
    ]
  },
  "dependencies": {
    "archiver": "^7.0.1",
    "bcryptjs": "^2.4.3",
    "bwip-js": "^4.8.0",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.4",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.7",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "twilio": "^5.12.2"
  },
  "optionalDependencies": {
    "serialport": "^12.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "pkg": "^5.8.1"
  }
}
